<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="CDM-notification-core-tests">
    <parameter name="useDefaultListeners" value="false"/>
    <test name="Notification DAO Unit Tests" preserve-order="true" parallel="false">
        <parameter name="dbType" value="H2"/>
        <classes>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.dao.GenericNotificationManagementDAOTest"/>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.dao.NotificationArchivalDAOTests"/>
        </classes>
    </test>
    <test name="Notification Service Unit Tests" preserve-order="true" parallel="false">
        <parameter name="dbType" value="H2"/>
        <classes>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.common.BaseNotificationManagementTest"/>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.impl.NotificationArchivalServiceImplTest"/>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.impl.NotificationConfigServiceImplTest"/>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.impl.NotificationManagementServiceImplTest"/>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.task.NotificationArchivalTaskManagerImplTest"/>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.task.NotificationArchivalTaskTest"/>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.util.NotificationEventBrokerTest"/>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.util.NotificationHelperTest"/>
            <class name="io.entgra.device.mgt.core.notification.mgt.core.util.NotificationListenerTest"/>
        </classes>
    </test>
</suite>
